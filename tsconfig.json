{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
